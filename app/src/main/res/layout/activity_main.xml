<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shortcutdemo.MainActivity">

    <TextView
        android:id="@+id/tv_install"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Install"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.502"/>

    <TextView
        android:id="@+id/tv_uninstall"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnInstall"
        app:layout_constraintLeft_toRightOf="@+id/tv_install"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.434"/>

    <TextView
        android:id="@+id/tv_activityid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivityId"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="328dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_taskid"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_chainStyle="spread"/>

    <TextView
        android:id="@+id/tv_taskid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TaskId"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="111dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_activityid"/>

    <TextView
        android:id="@+id/tv_applicationid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ApplicationId"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_taskid"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.163"/>

</android.support.constraint.ConstraintLayout>
